<header>
    <nav class="bg-white border-gray-200 px-4 lg:px-6 py-2.5 dark:bg-gray-800">
        <div
            class="flex flex-wrap justify-between items-center mx-auto max-w-screen-xl"
        >
            <a href="/" class="flex items-center">
                <span
                    class="self-center text-xl font-semibold whitespace-nowrap dark:text-white"
                >
                    EuroCoders
                </span>
            </a>
            <div
                class="hidden justify-between items-center w-full lg:flex lg:w-auto lg:order-1"
                id="mobile-menu-2"
            >
                <ul
                    class="flex flex-col items-center mt-4 font-medium lg:flex-row lg:space-x-8 lg:mt-0"
                >
                    <li>
                        <a
                            href="/"
                            class="<%= activeLink === '/' ? 'text-blue-600 font-bold underline' : 'text-gray-700' %> block py-2 pr-4 pl-3 border-b border-gray-100 hover:bg-gray-50 lg:hover:bg-transparent lg:border-0 lg:hover:text-primary-700 lg:p-0 dark:text-gray-400 lg:dark:hover:text-white dark:hover:bg-gray-700 dark:hover:text-white lg:dark:hover:bg-transparent dark:border-gray-700"
                            aria-current="Home"
                        >
                            Home
                        </a>
                    </li>
                    <li>
                        <a
                            href="/images"
                            class="<%= activeLink === 'images' ? 'text-blue-600 font-bold underline' : 'text-gray-700' %> block py-2 pr-4 pl-3 border-b border-gray-100 hover:bg-gray-50 lg:hover:bg-transparent lg:border-0 lg:hover:text-primary-700 lg:p-0 dark:text-gray-400 lg:dark:hover:text-white dark:hover:bg-gray-700 dark:hover:text-white lg:dark:hover:bg-transparent dark:border-gray-700"
                            aria-current="Images"
                        >
                            Images
                        </a>
                    </li>
                    <li>
                        <a
                            href="/users"
                            class="<%= activeLink === 'users' ? 'text-blue-600 font-bold underline' : 'text-gray-700' %> block py-2 pr-4 pl-3 border-b border-gray-100 hover:bg-gray-50 lg:hover:bg-transparent lg:border-0 lg:hover:text-primary-700 lg:p-0 dark:text-gray-400 lg:dark:hover:text-white dark:hover:bg-gray-700 dark:hover:text-white lg:dark:hover:bg-transparent dark:border-gray-700"
                            aria-current="Users"
                        >
                            Users
                        </a>
                    </li>
                    <% if(!isAdmin) { %>
                    <li>
                        <a
                            href="/contact"
                            class="<%= activeLink === 'contact' ? 'text-blue-600 font-bold underline' : 'text-gray-700' %> block py-2 pr-4 pl-3 text-gray-700 border-b border-gray-100 hover:bg-gray-50 lg:hover:bg-transparent lg:border-0 lg:hover:text-primary-700 lg:p-0 dark:text-gray-400 lg:dark:hover:text-white dark:hover:bg-gray-700 dark:hover:text-white lg:dark:hover:bg-transparent dark:border-gray-700"
                            aria-current="Contact"
                        >
                            Contacts
                        </a>
                    </li>
                    <% } else { %>
                    <li>
                        <a
                            href="/contact/messages"
                            class="<%= activeLink === 'contact/messages' ? 'text-blue-600 font-bold underline' : 'text-gray-700' %> block py-2 pr-4 pl-3 text-gray-700 border-b border-gray-100 hover:bg-gray-50 lg:hover:bg-transparent lg:border-0 lg:hover:text-primary-700 lg:p-0 dark:text-gray-400 lg:dark:hover:text-white dark:hover:bg-gray-700 dark:hover:text-white lg:dark:hover:bg-transparent dark:border-gray-700"
                            aria-current="Contact"
                        >
                            Messages
                        </a>
                    </li>
                    <% } %>

                    <!-- prettier-ignore -->
                    <% if(userID) { %>
                    <li>
                        <div class="relative inline-block text-left">
                            <div class="relative dropdown-menu">
                                <button
                                    type="button"
                                    class="inline-flex w-full justify-center gap-x-1.5 rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50"
                                    id="menu-button"
                                    aria-expanded="true"
                                    aria-haspopup="true"
                                >
                                    Profile <%= username %>
                                    <svg
                                        class="-mr-1 h-5 w-5 text-gray-400"
                                        viewBox="0 0 20 20"
                                        fill="currentColor"
                                        aria-hidden="true"
                                    >
                                        <path
                                            fill-rule="evenodd"
                                            d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z"
                                            clip-rule="evenodd"
                                        />
                                    </svg>
                                </button>
                                <div
                                    class="absolute right-0 z-10 w-56 origin-top-right rounded-md bg-white shadow-lg ring-black ring-opacity-5 focus:outline-none"
                                    role="menu"
                                    aria-orientation="vertical"
                                    aria-labelledby="menu-button"
                                    tabindex="-1"
                                >
                                    <div
                                        class="py-1 show-dropdown-menu"
                                        role="none"
                                    >
                                        <a
                                            href="/profile/upload-image"
                                            class="<%= activeLink === 'profile/upload-image' ? 'text-blue-600 font-bold underline' : 'text-gray text-gray-700' %> px-3 block py-2 border-b border-gray-100 rounded"
                                            aria-current="Upload image"
                                        >
                                            Upload image
                                        </a>
                                        <a
                                            href="/profile/change-profile"
                                            class="<%= activeLink === 'profile/change-profile' ? 'text-blue-600 font-bold underline' : 'text-gray text-gray-700' %> px-3 block py-2 border-b border-gray-100 rounded"
                                            aria-current="Change profile"
                                        >
                                            Change profile
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </li>
                    <li>
                        <a
                            href="/auth/signout"
                            class="bg-blue-600 text-white px-3 block py-2 text-gray-700 border-b border-gray-100 rounded"
                            aria-current="Log out"
                        >
                            Log Out
                        </a>
                    </li>
                    <% } %>
                </ul>
            </div>
        </div>
    </nav>
</header>
